<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorGray_ShowDetailPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

    <LinearLayout
        android:id="@+id/LinearLayout_BackButton"
        android:background="@drawable/graytitlebar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:layout_height="50dip">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/backbtn"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/TextView_ShowName"
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="14dip"
                android:textStyle="bold"
                android:layout_marginLeft="10dip"
                android:layout_height="wrap_content"
                android:text="Show Name"/>

            <TextView
                android:id="@+id/TextView_ShowTimeTitle"
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="10dip"
                android:textStyle="bold"
                android:layout_marginLeft="10dip"
                android:layout_height="wrap_content"
                android:text="Show Name"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/LinearLayout_BackButton"
        android:nestedScrollingEnabled="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/colorGray_ShowDetailPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:paddingTop="5dip"
                android:background="@drawable/schbg">

                <LinearLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="120dip"
                            android:layout_height="170dip"
                            android:layout_marginBottom="5dip"
                            android:layout_marginLeft="5dip"
                            android:gravity="center|top">

                            <ImageView
                                android:id="@+id/ImageView_ShowImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="0dip"

                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="5dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dip">

                            <TextView
                                android:id="@+id/TextView_ShowTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textColor="@color/colorWhite"
                                android:textSize="14dip"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/TextView_ShowDescription"
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dip"
                                android:text="Description"
                                android:textSize="12dip" />
                            <LinearLayout
                                android:id="@+id/LinearLayout_Container_Sports"
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dip"
                                android:orientation="vertical"


                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="30dip">
                                    <ImageView
                                        android:id="@+id/ImageView_Team1Image"
                                        android:layout_width="30dip"
                                        android:layout_marginRight="20dip"
                                        android:layout_height="30dip" />
                                    <TextView
                                        android:id="@+id/TextView_Team1"
                                        android:layout_width="wrap_content"
                                        android:text="Team 1"
                                        android:textSize="14dip"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorWhite"
                                        android:gravity="center_vertical"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_marginLeft="60dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:text="V/S"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_height="30dip">
                                    <ImageView
                                        android:id="@+id/ImageView_Team2Image"
                                        android:layout_width="30dip"
                                        android:layout_marginRight="20dip"
                                        android:layout_height="30dip" />
                                    <TextView
                                        android:id="@+id/TextView_Team2"
                                        android:textSize="14dip"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorWhite"
                                        android:layout_width="wrap_content"
                                        android:text="Team 1"
                                        android:gravity="center_vertical"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"

                android:background="@color/colorTVGuideGray"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/Button_Record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:background="@color/colorOrange"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"

                        android:scaleType="fitXY"
                        android:src="@drawable/recordicon"
                        android:text="Watch" />

                    <TextView
                        android:id="@+id/Button_RecordText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Record"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@color/colorGray"></LinearLayout>

                <LinearLayout
                    android:id="@+id/Button_Watch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"

                        android:scaleType="fitXY"
                        android:src="@drawable/watchicon"
                        android:text="Watch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@color/colorGray"></LinearLayout>

                <LinearLayout
                    android:id="@+id/Button_Cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dip"
                        android:layout_height="20dip"

                        android:scaleType="fitXY"
                        android:src="@drawable/cancelicon"
                        android:text="Watch" />

                    <TextView
                        android:id="@+id/Button_RecordCancelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="10dip"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/TextView_ShowNameBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="16dip"
                    android:text="Channel Name"/>
                <TextView
                    android:id="@+id/TextView_ShowType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="ShowType"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:gravity="left|center"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="20dip"
                        android:src="@drawable/clock" />

                    <TextView
                        android:text="Time"
                        android:id="@+id/TextView_ShowTimeBase"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorBlack"
                        android:layout_height="20dip"
                        android:layout_marginLeft="5dip"
                        android:gravity="left|center"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5dip"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/TextView_Show_DescriptionText"
                    android:layout_width="match_parent"
                    android:text="Desctipntion"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/LinearLayout_Container_Movies"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/RatingBar_Movie"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:layout_width="290dip"
                        android:rating="0"

                        android:layout_height="55dip" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout_EpisodesArea"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:background="@drawable/strip"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodes"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="400dip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"

                        android:padding="5dip"
                        >

                        <ListView
                            android:id="@+id/ListView_ShowDetails"
                            android:layout_width="match_parent"
                            android:minHeight="400dip"
                            android:divider="@null"
                            android:layout_height="match_parent">

                        </ListView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ProgressDialougeMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LinearLayout_BackButton"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ProgressDialouge"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:background="@drawable/roundanimbargray"

            android:orientation="horizontal"
            android:visibility="visible">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
