<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/SliderLayout"
        android:layout_width="match_parent"
        android:layout_height="98dip"
        android:background="@color/colorBlack">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="ENVISION"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <!--Data Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlack"
                android:orientation="vertical"
                android:paddingTop="10dip">

                <LinearLayout
                    android:id="@+id/ScheduleStrip"
                    android:layout_width="match_parent"
                    android:layout_height="43dip"

                    android:background="@drawable/schedulestrip"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:id="@+id/HorizontalScrolView_Days"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/LinearLayout_DaysFirstDefaulControl"
                                android:layout_width="24dip"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"></LinearLayout>

                            <LinearLayout
                                android:id="@+id/ScheduleDays_Controls"

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="80dip"
                                    android:layout_height="50dip">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="Today"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:paddingLeft="10dip"
                                            android:text="4"
                                            android:textColor="@color/colorGray"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="2dip"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorGray"></LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="80dip"
                                    android:layout_height="50dip">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="Wed"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:paddingLeft="10dip"
                                            android:text="5"
                                            android:textColor="@color/colorGray"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="2dip"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorGray"></LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="80dip"
                                    android:layout_height="50dip">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="Thu"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:paddingLeft="10dip"
                                            android:text="6"
                                            android:textColor="@color/colorGray"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="2dip"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorGray"></LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="80dip"
                                    android:layout_height="50dip">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="Fri"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:paddingLeft="10dip"
                                            android:text="7"
                                            android:textColor="@color/colorGray"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="2dip"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorGray"></LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="80dip"
                                    android:layout_height="50dip">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="Sat"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:paddingLeft="10dip"
                                            android:text="8"
                                            android:textColor="@color/colorGray"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="2dip"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@color/colorGray"></LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_NowButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:background="@color/colorShowNotNow_Gray"
            android:gravity="center"
            android:padding="4dip">

            <Button
                android:id="@+id/Button_Now"
                android:layout_width="50dip"

                android:layout_height="35dip"
                android:background="@null"
                android:text="Now"

                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </RelativeLayout>


    <HorizontalScrollView

        android:id="@+id/ScrolView_TvGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SliderLayout"
        android:background="@color/colorTVGuideGray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="1200dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearLayout_TimingBar"
                android:layout_width="wrap_content"
                android:layout_height="22dip"
                android:background="@drawable/timebg"
                android:minWidth="1200dip"
                android:orientation="horizontal"

                android:paddingLeft="70dip">

            </LinearLayout>

            <ListView
                android:id="@+id/ListViewTVGuides"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dip"


                android:background="@null"
                android:divider="@color/colorSeperatorGray"
                android:dividerHeight="1px"
                android:minWidth="1200dip"

                ></ListView>
        </LinearLayout>

    </HorizontalScrollView>

    <com.pakpublishers.infosquare.envision.adapters.UnScrollableListView


        android:id="@+id/ListViewChannels"
        android:layout_width="75dip"
        android:layout_height="match_parent"
        android:layout_below="@+id/SliderLayout"
        android:layout_marginTop="22dip"
        android:isScrollContainer="false"
        android:clickable="false"
        android:nestedScrollingEnabled="false"
        android:divider="@color/colorSeperatorGray"
        android:dividerHeight="1px"
        android:paddingRight="3dip"
        android:visibility="visible"></com.pakpublishers.infosquare.envision.adapters.UnScrollableListView>

    <LinearLayout

        android:id="@+id/LinearyLayout_ChanelListOverlay"
        android:layout_width="75dip"
        android:layout_height="match_parent"
        android:layout_below="@+id/SliderLayout"
        android:layout_marginTop="22dip"
        android:divider="@color/colorSeperatorGray"

        android:dividerHeight="1px"
        android:orientation="horizontal"
        android:paddingRight="3dip"
        android:visibility="visible"></LinearLayout>


    <LinearLayout
        android:id="@+id/Seekbar_ShowTracker"
        android:layout_width="80dip"
        android:layout_height="81dip"
        android:layout_marginLeft="55dip"
        android:layout_marginTop="42dip"
        android:background="@drawable/slider"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="0dip">

        <TextView
            android:id="@+id/Seekbar_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="Today"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SeekBar_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="8dip" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ProgressDialougeMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ProgressDialouge"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:background="@drawable/roundanimbar"
            android:orientation="horizontal"
            android:visibility="visible">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
