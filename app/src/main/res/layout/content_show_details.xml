<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dip"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/TextView_ShowNameBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="16dip"
        android:text="Channel Name"/>
    <TextView
        android:id="@+id/TextView_ShowType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="ShowType"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:gravity="left|center"
        android:layout_marginTop="3dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dip"
            android:layout_height="20dip"
            android:src="@drawable/clock" />

        <TextView
            android:text="Time"
            android:id="@+id/TextView_ShowTimeBase"
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:layout_height="20dip"
            android:layout_marginLeft="5dip"
            android:gravity="left|center"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dip"
        android:textColor="@color/colorBlack"
        android:id="@+id/TextView_Show_DescriptionText"
        android:layout_width="match_parent"
        android:text="Desctipntion"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/LinearLayout_Container_Movies"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RatingBar
            android:id="@+id/RatingBar_Movie"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_width="290dip"
            android:rating="0"

            android:layout_height="55dip" />
    </LinearLayout>


</LinearLayout>