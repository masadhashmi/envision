<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorGrayListGuidePage_BG"
    tools:context="com.pakpublishers.infosquare.envision.GuidePageListActivity">

    <LinearLayout

        android:id="@+id/ChannelArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/toolbar"
            android:paddingLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/graytitlebar"
             >

            <ImageView

                android:layout_width="wrap_content"
                android:src="@drawable/backbtn"
                android:layout_marginRight="20dip"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/TextView_BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="ABC"
                android:textStyle="bold"
                android:textSize="18dip"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutPreviousNextControlsArea"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dip">
        <Button
            android:id="@+id/Button_PreviousDay"
            android:layout_width="150dip"
            android:layout_height="50dip"
            android:text="Previous"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/Button_NextDay"
            android:layout_width="150dip"
            android:layout_height="50dip"
            android:text="Next"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_above="@id/RelativeLayoutPreviousNextControlsArea"
        android:layout_below="@id/ChannelArea"
        android:id="@+id/content_guide_page_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/ScheduleStrip"
            android:layout_width="match_parent"
            android:layout_height="43dip"

            android:background="@drawable/schedulestrip"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:id="@+id/HorizontalScrolView_Days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/LinearLayout_DaysFirstDefaulControl"
                        android:layout_width="24dip"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/ScheduleDays_Controls"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="80dip"
                            android:layout_height="50dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Today"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingLeft="10dip"
                                    android:text="4"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="2dip"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@color/colorGray"></LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="80dip"
                            android:layout_height="50dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Wed"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingLeft="10dip"
                                    android:text="5"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="2dip"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@color/colorGray"></LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="80dip"
                            android:layout_height="50dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Thu"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingLeft="10dip"
                                    android:text="6"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="2dip"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@color/colorGray"></LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="80dip"
                            android:layout_height="50dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Fri"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingLeft="10dip"
                                    android:text="7"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="2dip"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@color/colorGray"></LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="80dip"
                            android:layout_height="50dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Sat"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:paddingLeft="10dip"
                                    android:text="8"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="2dip"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@color/colorGray"></LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dip"
            android:gravity="center_vertical"
            android:layout_height="80dip">

            <ImageView
                android:id="@+id/ImageView_Channel"
                android:layout_width="50dip"
                android:layout_height="50dip" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:background="@color/colorGrayListGuidePage_Dropdownbg"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical"

                android:layout_height="30dip">
                <Spinner
                    android:id="@+id/Spinner_Channels"
                    android:layout_width="match_parent"
                    android:background="@null"

                    android:layout_height="match_parent"></Spinner>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorGrayListGuidePage_ListBG"
            android:layout_margin="10dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/ListView_Guides"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout_NowButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:background="@color/colorShowNotNow_Gray"
        android:gravity="center"
        android:padding="4dip">

        <Button
            android:id="@+id/Button_Now"
            android:layout_width="50dip"

            android:layout_height="35dip"
            android:background="@null"
            android:text="Now"

            android:textColor="@color/colorWhite" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Seekbar_ShowTracker"
        android:layout_width="80dip"
        android:layout_height="81dip"
        android:layout_marginLeft="55dip"
        android:layout_marginTop="42dip"
        android:background="@drawable/slider"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="0dip">

        <TextView
            android:id="@+id/Seekbar_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="Today"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SeekBar_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="8dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ChannelArea"
        android:id="@+id/ProgressDialougeMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ProgressDialouge"
            android:layout_width="70dip"
            android:layout_height="70dip"

            android:background="@drawable/roundanimbar"
            android:orientation="horizontal"
            android:visibility="visible">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
