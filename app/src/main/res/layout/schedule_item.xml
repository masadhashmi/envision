<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@null"
    android:paddingBottom="5dip"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:background="@color/colorLight_Gray"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_marginRight="65dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dip"
            android:paddingLeft="10dip">
            <LinearLayout
                android:layout_width="wrap_content"
               android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Season:"
                    android:id="@+id/TextView_Season_ID"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/TextView_EpisodeNo"
                    android:layout_marginLeft="20dip"
                    android:text="Episode:"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/TextView_EpisodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="12dip"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_EpisodeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="12dip"

                android:maxLength="120"
                android:layout_marginTop="0dip"
                android:text="jfkajskf ajfk askf jasdklf jkasdj fkljaskdlfjkla fkla sklfjkladsjfksdajfjfasdjfklasdjfkajsdkfjaskdjfkasdjfkjasdkfjaklsdjfadsjfjkadsjfkasjfklasdjfs"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:gravity="left|center"
                 android:layout_marginTop="3dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="20dip"
                    android:src="@drawable/clock" />

                <TextView
                    android:text="Time"
                    android:id="@+id/TextView_EpisodeTime"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorBlack"
                    android:layout_height="20dip"
                    android:layout_marginLeft="5dip"
                    android:gravity="left|center"
                     />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dip"
        android:background="@color/colorTVGuideGray"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Button_Record"
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="60dip"

            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="20dip"

                android:scaleType="fitCenter"
                android:src="@drawable/recordicon"
                android:text="Watch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Button_Cancel"
            android:background="@color/colorTVGuideGray"
            android:layout_width="match_parent"
            android:layout_height="60dip"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="20dip"

                android:scaleType="fitCenter"
                android:src="@drawable/cancelicon"
                android:text="Watch" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>